<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlphaMobile.LoginPage">
    <StackLayout HorizontalOptions="Fill" VerticalOptions="CenterAndExpand" BackgroundColor="Azure">
        <Entry Text="{Binding UserLogin}"  Keyboard="Email" Placeholder="Email" HorizontalOptions="Fill"/>
        <Entry Text="{Binding UserPW}" IsPassword="True" HorizontalOptions="Fill"/>
        <Button Text="Login" Clicked="Button_Clicked"/>
        <Editor x:Name="Editorbox" HorizontalOptions="Fill" VerticalOptions="FillAndExpand" Text=""/>
    </StackLayout>
</ContentPage>